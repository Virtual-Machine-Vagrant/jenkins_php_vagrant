#escape ^zz                                     # Escape is now (Ctrl-Z)
bind ',' prev
bind '.' next
#bind "^\]" prev                                # Previous window with ctrl-left
#bind "^\[" next                                # Next window with ctrl-right
bind = resize =
bind + resize +1
bind - resize -1
bind _ resize max
bind c screen 1                                 # Window numbering starts at 1, not 0.
bind 0 select 10


